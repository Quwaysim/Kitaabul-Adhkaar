<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Legibility">

        <SeekBarPreference
            android:defaultValue="24"
            android:key="@string/key_size"
            android:max="50"
            android:summary="@string/text_size_summary"
            android:title="@string/font_size"
            app:min="20"
            app:seekBarIncrement="2"
            app:showSeekBarValue="true" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Notifications">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/key_notification_reminder"
            android:summary="@string/notification_summary"
            android:title="@string/notification_title" />

    </PreferenceCategory>

</PreferenceScreen>