<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashscreenActivity">

    <ImageView
        android:id="@+id/app_icon_splash"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/app_logo_white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard"
        android:layout_marginEnd="@dimen/standard"
        android:text="@string/app_name_ar"
        android:layout_marginTop="@dimen/standard"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:fontFamily="@font/tajawal"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/app_icon_splash"
        app:layout_constraintStart_toStartOf="@+id/app_icon_splash"
        app:layout_constraintTop_toBottomOf="@+id/app_icon_splash" />
</androidx.constraintlayout.widget.ConstraintLayout>